# Configure aliases
alias cm="chezmoi"
alias nv="nvim"
alias sql="node ~/projects/glidian/web-app/scripts/mysql.js"
alias sqlprod="mysql -h localhost.aptible.in -P 21777 -u aptible --password=jfGRjHXSrTFl8d5WdRWe7rCyVwIYG_u4 --safe-updates -D db --prompt='PRODUCTION DATABASE> '"

# Set up the prompt
autoload -Uz promptinit
promptinit
prompt adam1

setopt histignorealldups sharehistory

# Use emacs keybindings even if our EDITOR is set to vi
bindkey -e

# Keep 1000 lines of history within the shell and save it to ~/.zsh_history:
EDITOR=nvim
HISTSIZE=1000
SAVEHIST=1000
HISTFILE=~/.zsh_history

# Use modern completion system
autoload -Uz compinit
compinit

# Use FZF for command line tab completion
source ~/.config/zsh/plugins/fzf-tab/fzf-tab.plugin.zsh

# Add NVM to environment
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Set fd as default file finder for fzf
export FZF_DEFAULT_COMMAND='fdfind'
